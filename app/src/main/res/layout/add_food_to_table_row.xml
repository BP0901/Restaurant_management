<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/AddFoodToTableLayout"
    android:layout_margin="8dp"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/imgAddFoodRow"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:src="@drawable/pizza_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nameAddFoodRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/imgAddFoodRow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceAddFoodRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/discountAddFoodRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/priceAddFoodRow" />

</androidx.constraintlayout.widget.ConstraintLayout>
